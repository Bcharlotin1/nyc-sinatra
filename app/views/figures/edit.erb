<h2>Edit Figure</h2>

<!-- add content here -->

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>

<form action="/figures/<%=@figure.id%>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">

    <label>Edit Figure Name:</label><br>
    <input  id="figure_name" type="text" name="figure[name]" value="<%= @figure.name %>">

    <br>
    
    <h3>Existing titles</h3>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="<%=title.name %>" value="<%= title.id %>"<%= title.name %><%='checked' if @figure.titles.include?(title) %>><%= title.name %></input><br>
  <% end %>
  
  <br>

    <label>Figure's Titles:</label><br>
    <input id = "new_title" type="text" name="title[name]">

    <br>

    <h3>Existing landmarks</h3>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="<%=landmark.name%>" value="<%= landmark.id %>"<%= landmark.name %><%='checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input><br>
    
  <% end %>
  <br>

    <label>Figure's Landmarks:</label><br>
    <input id= "new_landmark" type="text" name="landmark[name]" >

    <br>

  <input type="submit" value="Edit Figure">
</form>
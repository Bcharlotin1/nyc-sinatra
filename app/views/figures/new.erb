<h2>Create New Figure</h2>

<!-- add content here -->

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>

<form action="/figures" method="POST">

    <label>Figure Name:</label><br>
    <input id = "figure_name" type="text" name="figure[name]">

    <br>
    
    <h3>Existing titles</h3>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id %>" value="<%= title.id %>"><%= title.name %></input><br>
  <% end %>
  
  <br>

    <label>Figure's Titles:</label><br>
    <input id = "new_title" type="text" name="title[name]">

    <br>

    <h3>Existing landmarks</h3>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %></input><br>
  <% end %>
  <br>

    <label>Figure's Landmarks:</label><br>
    <input id= "new_landmark" type="text" name="landmark[name]">

    <br>

  <input type="submit" value="Create New Figure">
</form>